    </dependency>
    <!-- Testing the SolrYard needs all Solr/Lucene dependencies -->
    <dependency> <!-- because the SolrYard uses ConfigurationExceptions -->
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
