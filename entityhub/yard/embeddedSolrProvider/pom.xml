  <packaging>bundle</packaging>
  <version>0.1-SNAPSHOT</version>

  <name>Apache Stanbol Entityhub - Embedded Solr Server Provider</name>
  <description>This bundle adds support for the use of an embedded SolrServer in
  combination with the SolrYard</description>

  <inceptionYear>2010</inceptionYear>

  <scm>
    <connection>
      scm:svn:http://svn.apache.org/repos/asf/incubator/stanbol/trunk/entityhub/yard/embeddedSolrProvider
    </connection>
    <developerConnection>
      scm:svn:https://svn.apache.org/repos/asf/incubator/stanbol/trunk/entityhub/yard/embeddedSolrProvider
    </developerConnection>
    <url>http://incubator.apache.org/stanbol</url>
  </scm>

  <build>
    <plugins>
    <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Export-Package>
            </Export-Package>
            <Import-Package>
              !junit.framework,
              !org.mortbay.jetty.*,
              !org.mortbay.log,
              !com.sun.msv.*,
              !org.relaxng.datatype,
              *
            </Import-Package>
           <Private-Package>
              org.apache.stanbol.entityhub.yard.solr.embedded;version=${pom.version},
            </Private-Package>
            <Embed-Dependency>
              solr-core, lucene-core, lucene-analyzers, 
              lucene-highlighter, lucene-memory, lucene-spellchecker, lucene-misc, 
              lucene-queries, lucene-snowball, solr-commons-csv,
              stax-api,wstx-asl
            </Embed-Dependency>
           </instructions>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-scr-plugin</artifactId>
        <version>1.4.4</version>
      </plugin>
    </plugins>
  </build>

  <dependencies>
