<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.apache.stanbol</groupId>
    <artifactId>apache-stanbol-entityhub</artifactId>
    <version>1.0.1-SNAPSHOT</version>
    <relativePath>../..</relativePath>
  </parent>

  <artifactId>org.apache.stanbol.entityhub.core</artifactId>
  <packaging>bundle</packaging>

  <name>Apache Stanbol Entityhub Generic Core</name>
  <description>The Core Components of the Entityhub. This includes the default
    implementations for the services defined by the services API as well as an
    in-memory implementation of the model.
  </description>

  <inceptionYear>2010</inceptionYear>
  <licenses>
    <license>
      <name>Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
      <comments>A business-friendly OSS license</comments>
    </license>
  </licenses>
  
  <scm>
    <connection>
      scm:svn:http://svn.apache.org/repos/asf/stanbol/trunk/entityhub/generic/core
    </connection>
    <developerConnection>
      scm:svn:https://svn.apache.org/repos/asf/stanbol/trunk/entityhub/generic/core
    </developerConnection>
    <url>http://stanbol.apache.org</url>
  </scm>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <instructions>
            <Import-Package>
              org.apache.stanbol.entityhub.servicesapi; provide:=true; version="[0.11,1.1)",
              org.apache.stanbol.entityhub.servicesapi.site; provide:=true; version="[0.11,1.1)",
              org.apache.stanbol.entityhub.servicesapi.yard; provide:=true; version="[0.11,1.1)",
              org.apache.stanbol.entityhub.servicesapi.mapping; provide:=true; version="[0.11,1.1)",
              org.apache.stanbol.entityhub.servicesapi.model; provide:=true; version="[0.11,1.1)",
              org.apache.stanbol.entityhub.servicesapi.query; provide:=true; version="[0.11,1.1)",
              *
            </Import-Package>
            <Export-Package>
              org.apache.stanbol.entityhub.core;version=${project.version},
              org.apache.stanbol.entityhub.core.mapping;version=${project.version},
              org.apache.stanbol.entityhub.core.model;version=${project.version},
              org.apache.stanbol.entityhub.core.query;version=${project.version},
              org.apache.stanbol.entityhub.core.site;version=${project.version},
              org.apache.stanbol.entityhub.core.yard;version=${project.version},
              org.apache.stanbol.entityhub.core.utils;version=${project.version}
            </Export-Package>
            <Private-Package>
              org.apache.stanbol.entityhub.core.impl;version=${project.version},
            </Private-Package>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-scr-plugin</artifactId>
      </plugin>

    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.apache.stanbol</groupId>
      <artifactId>org.apache.stanbol.entityhub.servicesapi</artifactId>
      <version>1.0.1-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.apache.stanbol</groupId>
      <artifactId>org.apache.stanbol.commons.namespaceprefix.service</artifactId>
      <version>1.0.1-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.apache.stanbol</groupId>
      <artifactId>org.apache.stanbol.commons.stanboltools.offline</artifactId>
      <version>1.0.1-SNAPSHOT</version>
    </dependency>

    <!-- OSGI framework dependencies -->
    <dependency>
      <groupId>org.apache.felix</groupId>
      <artifactId>org.apache.felix.scr.annotations</artifactId>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.core</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.osgi</groupId>
      <artifactId>org.osgi.compendium</artifactId>
      <scope>provided</scope>
    </dependency>
    <!-- utilities -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>joda-time</groupId>
      <artifactId>joda-time</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-collections</groupId>
      <artifactId>commons-collections</artifactId>
    </dependency>
    
    <!-- for tests -->
    <dependency>
      <groupId>org.apache.stanbol</groupId>
      <artifactId>org.apache.stanbol.entityhub.test</artifactId>
      <version>1.0.1-SNAPSHOT</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-simple</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

</project>
